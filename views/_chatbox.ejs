<!-- Created code for chat box -->
<link rel="stylesheet" href="css/chatbox.css">
<% if(locals.user){ %>
    <div id="user-chat-box">
        <ul id="chat-message-list">
            <li class="other-message">
                <span> Other-message </span>
            </li>
            <li class="self-message">
                <span> Self Message </span>
            </li>
        </ul>
        <div id="chat-message-input-container">
            <input type="text" name="" id="chat-message-input" placeholder="Type message here">
            <button id="send-message">Send</button>
        </div>
    </div>
<% } %>